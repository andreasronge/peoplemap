%table{:cellpadding => "0", :cellspacing => "0", :border => "0", :id => "node_info", :width => "100%"}
  %tr
    %td{:colspan=>"3"}
      %ul{:id => "node_menu"}
        %b
          current record:
        %li
          = link_to 'edit', edit_event_path(@object)
        %li
          = link_to 'delete', @object, :confirm => 'Are you sure?', :method => :delete
  %tr
    %td{:class => "node_info_value", :rowspan=>"3"}
      %h1
        = @object.title
    %th
      Event Type
    %td{:class => "node_info_value"}
      = @object.event_type
  %tr
    %th
      Start Date
    %td{:class => "node_info_value"}
      = @object.start_date
  %tr
    %th
      End Date
    %td{:class => "node_info_value"}
      = @object.end_date
  %tr
    %td{:class => "node_info_value",:colspan=>"3"}
      = @object.description
      &nbsp;
  %tr
    %th{:colspan=>"3"}
      Related Images
  %tr
    %td{:class => "node_info_value", :colspan=>"3"}
      IMAGE GALLERY HERE
  %tr
    %th{:colspan=>"3"}
      Notes
  %tr
    %td{:class => "node_info_value",:colspan=>"3"}
      = @object.notes
      &nbsp;
