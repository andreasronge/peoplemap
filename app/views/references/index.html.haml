%h1
  <b>reference</b>finder
%p
  = link_to 'New reference', new_reference_path
%table{ :cellpadding => "0", :cellspacing => "0", :border => "0", :class => "node_list"}
  %tr
    %th
      Reference Type
    %th
      Value
    %th{:colspan=>"3"}
  - @references.each do |reference|
    %tr{:class => cycle('list_odd', 'list_even')}
      %td
        = reference.type
      %td
        = reference.ref_value
      %td
        = link_to 'Show', :action => "show", :id => reference
      %td
        = link_to 'Edit', edit_reference_path(reference)
      %td
        = link_to 'Destroy', reference, :confirm => 'Are you sure?', :method => :delete
%br